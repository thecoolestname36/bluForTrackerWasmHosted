@namespace BluForTracker.Client.Shared.Components
@using Microsoft.AspNetCore.Components.Forms

<div class="container-fluid">
    <div class="row h4 pb-2 mb-4 text-black border-bottom border-black">
        User Details
    </div>
     <div class="row mb-3">
        <div class="container-fluid">
            <EditForm Model="@_formData" OnValidSubmit="OnValidSubmit" class="edit-form">
                <DataAnnotationsValidator />
                <ValidationSummary />
                <div class="row mb-3">
                    <label 
                        class="form-label"
                        for="username">Username (Max @MarkerFormModel.UsernameMaxChars characters)</label>
                    <InputText 
                        @bind-Value="_formData.Username" 
                        id="username" 
                        class="form-control" 
                        required />
                </div>
                <div class="row mb-3">
                    <label for="color" class="form-label">Marker Color</label>
                    <input 
                        @bind="_formData.Color"
                        type="color" 
                        class="form-control form-control-color" 
                        id="exampleColorInput" 
                        title="Choose your color"
                        style="width:100%"
                        required>
                </div>
                <div class="d-grid gap-2 col-6 mx-auto">
                    <button type="submit" class="btn btn-primary">Save User Details</button>
                </div>
            </EditForm>
        </div>
    </div>
    <div class="row h4 pb-2 mb-4 text-black border-bottom border-black">
        Application status
    </div>
    <div class="row mb-3">
        <table class="table is-bordered">
            <thead>
                <tr>
                    <th>Service</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th>Location Status</th>
                    <td><input @ref="_geolocationStatusRef" disabled /></td>
                </tr>
                <tr>
                    <th>Connection Status</th>
                    <td><input @ref="_hubConnectionStatusRef" disabled /></td>
                </tr>
                <tr>
                    <th>Connection ID</th>
                    <td><input @ref="_hubConnectionIdRef" disabled /></td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="row h4 pb-2 mb-4 text-black border-bottom border-black">
        Share
    </div>
    <div class="row mb-3">
        <div style="text-align:center;">
            <img style="width:65%;max-width:400px;" src="_content/BluForTracker.Client.Shared/images/qr-code.svg" />
        </div>
    </div>
</div>
